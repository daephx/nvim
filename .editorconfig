root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.lua]
max_line_length = 102
indent_size = 2
tab_width = 2
indent_style = space

[*.{bash,sh}]
max_line_length = 80
indent_style = space
indent_size = 2
binary_next_line = true
function_next_line = false
keep_padding = false
space_redirects = true
switch_case_indent = true

[*.md]
trim_trailing_whitespace = false

[{Makefile,**/Makefile,runtime/doc/*.txt}]
indent_style = tab
indent_size = 4
tab_width = 4
